{% extends "base.j2" %}
{% block content %}
<div id="{{page.bg_class}}">
    <span class="post-date">{{ page.date }}</span>
    <hr />
    {{ page.content }}
    <hr />
    <div class="row">
    {% for i in page.images %}
      <div class="col-12 col-sm-6 col-lg-3">
        <img class="w-100" src="{{ i }}">
      </div>
    {% endfor %}
    </div>
</div>
{% endblock %}

